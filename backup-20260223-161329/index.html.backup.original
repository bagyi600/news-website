<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NewsHub | Public News Portal</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --secondary: #7c3aed;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --info: #3b82f6;
            --light: #f8fafc;
            --dark: #1e293b;
            --gray: #64748b;
            --gray-light: #e2e8f0;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 25px rgba(0, 0, 0, 0.1);
            --radius: 8px;
            --transition: all 0.3s ease;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background: var(--light);
            color: var(--dark);
            line-height: 1.6;
        }
        
        /* Header */
        .header {
            background: white;
            box-shadow: var(--shadow);
            position: sticky;
            top: 0;
            z-index: 1000;
        }
        
        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 70px;
        }
        
        .logo {
            font-family: 'Poppins', sans-serif;
            font-size: 24px;
            font-weight: 700;
            color: var(--primary);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .logo i {
            color: var(--secondary);
        }
        
        .nav-links {
            display: flex;
            gap: 30px;
            align-items: center;
        }
        
        .nav-link {
            color: var(--dark);
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
            position: relative;
        }
        
        .nav-link:hover {
            color: var(--primary);
        }
        
        .nav-link.active {
            color: var(--primary);
        }
        
        .nav-link.active::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 100%;
            height: 2px;
            background: var(--primary);
            border-radius: 2px;
        }
        
        /* Hero Section */
        .hero {
            background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%);
            color: white;
            padding: 80px 20px;
            text-align: center;
            margin-bottom: 60px;
        }
        
        .hero h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 3.5em;
            font-weight: 700;
            margin-bottom: 20px;
            line-height: 1.2;
        }
        
        .hero p {
            font-size: 1.2em;
            max-width: 700px;
            margin: 0 auto 30px;
            opacity: 0.9;
        }
        
        /* Main Content */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        .section-title {
            font-family: 'Poppins', sans-serif;
            font-size: 2em;
            font-weight: 600;
            margin-bottom: 30px;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .section-title i {
            color: var(--primary);
        }
        
        /* Posts Grid */
        .posts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 30px;
            margin-bottom: 60px;
        }
        
        .post-card {
            background: white;
            border-radius: var(--radius);
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
            height: 100%;
            display: flex;
            flex-direction: column;
            cursor: pointer;
            position: relative;
        }
        
        .post-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
            border-color: var(--primary);
        }
        
        .post-card:hover .post-title {
            color: var(--primary);
        }
        
        .post-link {
            text-decoration: none;
            color: inherit;
            display: block;
            height: 100%;
        }
        
        .post-link:after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 1;
        }
        
        .post-image {
            height: 200px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3em;
        }
        
        .post-content {
            padding: 25px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }
        
        .post-category {
            display: inline-block;
            padding: 6px 12px;
            background: var(--gray-light);
            color: var(--dark);
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: 500;
            margin-bottom: 15px;
        }
        
        .post-title {
            font-family: 'Poppins', sans-serif;
            font-size: 1.3em;
            font-weight: 600;
            margin-bottom: 10px;
            line-height: 1.4;
            color: var(--dark);
        }
        
        .post-excerpt {
            color: var(--gray);
            margin-bottom: 20px;
            line-height: 1.6;
            flex-grow: 1;
        }
        
        .post-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: var(--gray);
            font-size: 0.9em;
            margin-top: auto;
        }
        
        .post-author {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .author-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }
        
        /* Newsletter */
        .newsletter {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            padding: 60px 20px;
            border-radius: var(--radius);
            text-align: center;
            margin: 60px 0;
        }
        
        .newsletter h3 {
            font-family: 'Poppins', sans-serif;
            font-size: 2em;
            margin-bottom: 20px;
            color: var(--dark);
        }
        
        .newsletter p {
            color: var(--gray);
            max-width: 600px;
            margin: 0 auto 30px;
        }
        
        .newsletter-form {
            max-width: 500px;
            margin: 0 auto;
            display: flex;
            gap: 10px;
        }
        
        .newsletter-input {
            flex-grow: 1;
            padding: 15px 20px;
            border: 2px solid var(--gray-light);
            border-radius: var(--radius);
            font-size: 1em;
            transition: var(--transition);
        }
        
        .newsletter-input:focus {
            outline: none;
            border-color: var(--primary);
        }
        
        .btn {
            padding: 15px 30px;
            border: none;
            border-radius: var(--radius);
            font-weight: 600;
            font-size: 1em;
            cursor: pointer;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
        
        .btn-primary {
            background: var(--primary);
            color: white;
        }
        
        .btn-primary:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
        }
        
        /* Footer */
        .footer {
            background: var(--dark);
            color: white;
            padding: 60px 20px 30px;
            margin-top: 60px;
        }
        
        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 40px;
            margin-bottom: 40px;
        }
        
        .footer-section h4 {
            font-family: 'Poppins', sans-serif;
            font-size: 1.2em;
            margin-bottom: 20px;
            color: white;
        }
        
        .footer-links {
            list-style: none;
        }
        
        .footer-links li {
            margin-bottom: 10px;
        }
        
        .footer-links a {
            color: var(--gray-light);
            text-decoration: none;
            transition: var(--transition);
        }
        
        .footer-links a:hover {
            color: white;
            padding-left: 5px;
        }
        
        .footer-bottom {
            text-align: center;
            padding-top: 30px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: var(--gray);
            font-size: 0.9em;
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2.5em;
            }
            
            .posts-grid {
                grid-template-columns: 1fr;
            }
            
            .newsletter-form {
                flex-direction: column;
            }
            
            .nav-links {
                display: none;
            }
        }
        
        /* Public Access Notice */
        .public-notice {
            background: #d1fae5;
            color: #065f46;
            padding: 15px 20px;
            border-radius: var(--radius);
            margin: 20px 0;
            text-align: center;
            font-weight: 500;
        }
        
        .public-notice i {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="nav-container">
            <a href="/" class="logo">
                <i class="fas fa-newspaper"></i>
                NewsHub
            </a>
            <div class="nav-links">
                <a href="/" class="nav-link active">Home</a>
                <a href="#categories" class="nav-link">Categories</a>
                <a href="#fact-check" class="nav-link">Fact Check</a>
                <a href="#popular" class="nav-link">Popular</a>
                <a href="/admin" class="nav-link">Admin</a>
            </div>
        </div>
    </header>

    <!-- Public Access Notice -->
    <div class="container">
        <div class="public-notice">
            <i class="fas fa-globe"></i>
            <strong>Public Access:</strong> All news content is freely accessible without login or registration.
        </div>
    </div>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1>Trusted News for Everyone</h1>
            <p>Access verified news, fact-checked stories, and comprehensive coverage without any login requirements. Free public access to quality journalism.</p>
            <div style="display: flex; gap: 15px; justify-content: center; margin-top: 30px;">
                <a href="#latest" class="btn btn-primary">
                    <i class="fas fa-newspaper"></i>
                    Read Latest News
                </a>
                <a href="#search" class="btn" style="background: rgba(255,255,255,0.2); color: white; border: 2px solid rgba(255,255,255,0.3);">
                    <i class="fas fa-search"></i>
                    Search Articles
                </a>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <main class="container">
        <!-- Latest News -->
        <section id="latest">
            <h2 class="section-title">
                <i class="fas fa-bolt"></i>
                Latest News
            </h2>
            <div class="posts-grid" id="posts-container">
                <!-- Posts will be loaded here -->
                <div class="loading">Loading news...</div>
            </div>
        </section>

        <!-- Newsletter -->
        <section class="newsletter">
            <h3>Stay Updated</h3>
            <p>Subscribe to our newsletter for weekly news digests and important updates.</p>
            <form class="newsletter-form" id="newsletter-form">
                <input type="email" class="newsletter-input" placeholder="Your email address" required>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-paper-plane"></i>
                    Subscribe
                </button>
            </form>
            <p style="font-size: 0.9em; color: var(--gray); margin-top: 15px;">
                No login required. Unsubscribe anytime.
            </p>
        </section>

        <!-- Categories -->
        <section id="categories">
            <h2 class="section-title">
                <i class="fas fa-tags"></i>
                Browse Categories
            </h2>
            <div class="posts-grid" id="categories-container">
                <!-- Categories will be loaded here -->
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h4>NewsHub</h4>
                <p>Providing free, accessible news to everyone without registration barriers.</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul class="footer-links">
                    <li><a href="/">Home</a></li>
                    <li><a href="#latest">Latest News</a></li>
                    <li><a href="#categories">Categories</a></li>
                    <li><a href="#fact-check">Fact Check</a></li>
                    <li><a href="/admin">Admin Panel</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Features</h4>
                <ul class="footer-links">
                    <li><a href="#">Public Access</a></li>
                    <li><a href="#">No Registration</a></li>
                    <li><a href="#">Fact-Checked</a></li>
                    <li><a href="#">Multiple Sources</a></li>
                    <li><a href="#">Regular Updates</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2026 NewsHub. All news content freely accessible to the public.</p>
            <p style="margin-top: 10px; font-size: 0.8em;">
                <i class="fas fa-unlock"></i> No login required | 
                <i class="fas fa-user-friends"></i> 100% Public Access
            </p>
        </div>
    </footer>

    <script>
        // Load posts
        async function loadPosts() {
            try {
                const response = await fetch('/api/posts?limit=6');
                const posts = await response.json();
                
                const container = document.getElementById('posts-container');
                container.innerHTML = '';
                
                posts.forEach(post => {
                    const postEl = document.createElement('article');
                    postEl.className = 'post-card';
                    postEl.innerHTML = `
                        <a href="/post/${post.slug}" class="post-link" style="text-decoration: none; color: inherit; display: block;" onclick="console.log('Clicked post:', '${post.slug}')">
                            <div class="post-image">
                                <i class="fas fa-newspaper"></i>
                            </div>
                            <div class="post-content">
                                <span class="post-category" style="background: ${post.category_color || '#e2e8f0'}; color: ${post.category_color ? 'white' : '#1e293b'}">
                                    ${post.category_name || 'General'}
                                </span>
                                <h3 class="post-title">${post.title}</h3>
                                <p class="post-excerpt">${post.excerpt || post.content.substring(0, 150)}...</p>
                                <div class="post-meta">
                                    <div class="post-author">
                                        <div class="author-avatar">
                                            ${post.author_name ? post.author_name.charAt(0).toUpperCase() : 'A'}
                                        </div>
                                        <span>${post.author_name || 'Author'}</span>
                                    </div>
                                    <div style="display: flex; align-items: center; gap: 15px;">
                                        <div>
                                            <i class="far fa-eye"></i> ${post.view_count || 0} views
                                        </div>
                                        <div style="color: var(--primary); font-weight: 500; display: flex; align-items: center; gap: 5px;">
                                            Read More <i class="fas fa-arrow-right" style="font-size: 0.9em;"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    `;
                    container.appendChild(postEl);
                });
            } catch (error) {
                console.error('Error loading posts:', error);
                document.getElementById('posts-container').innerHTML = '<div class="error">Failed to load news. Please try again later.</div>';
            }
        }
        
        // Load categories
        async function loadCategories() {
            try {
                const response = await fetch('/api/categories');
                const categories = await response.json();
                
                const container = document.getElementById('categories-container');
                container.innerHTML = '';
                
                categories.forEach(category => {
                    const catEl = document.createElement('div');
                    catEl.className = 'post-card';
                    catEl.innerHTML = `
                        <div class="post-content">
                            <h3 class="post-title">
                                <i class="${category.icon || 'fas fa-newspaper'}" style="color: ${category.color || '#2563eb'}; margin-right: 10px;"></i>
                                ${category.name}
                            </h3>
                            <p class="post-excerpt">${category.description || 'Browse news in this category'}</p>
                            <div class="post-meta">
                                <a href="/search?category=${category.slug}" style="color: ${category.color || '#2563eb'}; text-decoration: none;">
                                    <i class="fas fa-arrow-right"></i> Browse Articles
                                </a>
                            </div>
                        </div>
                    `;
                    container.appendChild(catEl);
                });
            } catch (error) {
                console.error('Error loading categories:', error);
            }
        }
        
        // Newsletter subscription
        document.getElementById('newsletter-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            const email = this.querySelector('input[type="email"]').value;
            
            try {
                const response = await fetch('/api/newsletter/subscribe', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert('Successfully subscribed to newsletter!');
                    this.reset();
                } else {
                    alert(data.error || 'Subscription failed');
                }
            } catch (error) {
                console.error('Newsletter subscription failed:', error);
                alert('Subscription failed. Please try again.');
            }
        });
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadPosts();
            loadCategories();
            
            // Update page title to reflect public access
            document.title = "NewsHub | Public News Portal - No Login Required";
            
            // Add public access badge to header
            const header = document.querySelector('.header .nav-container');
            const publicBadge = document.createElement('div');
            publicBadge.style.cssText = `
                background: #10b981;
                color: white;
                padding: 5px 12px;
                border-radius: 20px;
                font-size: 0.85em;
                font-weight: 600;
                display: flex;
                align-items: center;
                gap: 6px;
            `;
            publicBadge.innerHTML = '<i class="fas fa-unlock"></i> Public Access';
            header.appendChild(publicBadge);
        });
        
        // Utility function to format date
        function formatDate(dateString) {
            if (!dateString) return 'Recently';
            const date = new Date(dateString);
            const now = new Date();
            const diffMs = now - date;
            const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
            
            if (diffDays === 0) return 'Today';
            if (diffDays === 1) return 'Yesterday';
            if (diffDays < 7) return `${diffDays} days ago`;
            if (diffDays < 30) return `${Math.floor(diffDays / 7)} weeks ago`;
            return date.toLocaleDateString();
        }
    </script>
</body>
</html>
